<html lang="en" id="sim">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <title><%= typeof title != "undefined" && title ? title + " | " : "" %>Simbaluxe</title>
    <meta name="keywords" content="wig, wigs, landing, cosmetics, london, beauty, fashion">
    <meta name="description" content="">
    <meta name="robots" content="index, follow">

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@simbaluxe" />
    <meta name="twitter:creator" content="@simbaluxe" />
    <meta name="twitter:description" content="" />
    <meta name="twitter:image" content="" />
    <meta property="og:url" content="<%- location_origin %>" />
    <meta property="og:title" content="Simbaluxe" />
    <meta property="og:description" content="" />
    <meta property="og:image" content="" />

    <%_ if (url.startsWith("/admin")) { _%>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <%_ } _%>
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
